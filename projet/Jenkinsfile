pipeline {
    agent any

    environment {
        DOCKER_API_VERSION = '1.43'
        GITHUB_CREDENTIALS = credentials('github-credentials') 
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
        DOCKERHUB_USERNAME = 'Atkhadija' 
        BACKEND_IMAGE = "${DOCKERHUB_USERNAME}/todo-backend"
        FRONTEND_IMAGE = "${DOCKERHUB_USERNAME}/todo-frontend"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'üì• R√©cup√©ration du code depuis GitHub...'
                git branch: 'main',
                    url: 'https://github.com/Atkhadija/fullstack-docker-react-flask-khadija.git',
                    credentialsId: 'github-credentials'
            }
        }

        stage('Build Backend Docker Image') {
            steps {
                echo '‚öôÔ∏è Construction de l‚Äôimage Docker backend...'
                dir('projet/backend') { 
                    sh "docker build -t ${BACKEND_IMAGE}:latest -t ${BACKEND_IMAGE}:${BUILD_NUMBER} ."
                }
            }
        }

        stage('Build Frontend Docker Image') {
            steps {
                echo '‚öôÔ∏è Construction de l‚Äôimage Docker frontend...'
                dir('projet/frontend') { 
                    sh "docker build -t ${FRONTEND_IMAGE}:latest -t ${FRONTEND_IMAGE}:${BUILD_NUMBER} ."
                }
            }
        }

        stage('Run Docker Compose Locally') {
            steps {
                echo 'üöÄ Lancement de l‚Äôapplication localement avec Docker Compose...'
                dir('projet') {
                    sh "docker-compose up -d --build"
                }
            }
        }

        stage('Push Images to Docker Hub') {
            steps {
                echo 'üì§ Push des images Docker vers Docker Hub...'
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                        echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin
                        docker tag projet-backend \$DOCKER_USER/todo-backend:latest
                        docker tag projet-frontend \$DOCKER_USER/todo-frontend:latest
                        docker push \$DOCKER_USER/todo-backend:latest
                        docker push \$DOCKER_USER/todo-frontend:latest
                    """
                }
            }
        }
    }

    post {
        always {
            echo '‚úÖ Pipeline termin√©, nettoyage effectu√© si n√©cessaire.'
        }
        success {
            echo 'üéâ Pipeline ex√©cut√© avec succ√®s ! Les images sont sur Docker Hub.'
        }
        failure {
            echo '‚ùå Pipeline √©chou√©, v√©rifie les logs ci-dessus.'
        }
    }
}
